@model WebApplication3.Models.Departments?

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-4"></div>
    <div class="col-5">
        <h2 class="text-center mb-5">Information about Department</h2>
        <hr class="mb-3" />
        <div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" disabled="disabled"/>
                <span asp-validation-for="Name"></span>
            </div>
            <div>
                <label asp-for="Location"></label>
                <input asp-for="Location" class="form-control" disabled="disabled"/>
                <span asp-validation-for="Location"></span>
            </div>
            
            <div>
                <label asp-for="BranchId"></label>
                <input asp-for="BranchId" class="form-control" disabled="disabled"/>
                <span asp-validation-for="BranchId"></span>
            </div>
            
            <div>
                <label asp-for="ParentDepartmentId"></label>
                <input asp-for="ParentDepartmentId" class="form-control" disabled="disabled"/>
                <span asp-validation-for="ParentDepartmentId"></span>
            </div>
            
            <form asp-action="Delete" asp-controller="Departments" method="post">
                <input asp-for="Id" hidden="hidden"/>
                <div>
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                    <a asp-controller="Departments" asp-action="Index" class="btn btn-outline-primary">Back to list</a>
                </div>
            </form>
        </div>
    </div>
    <div class="col-5"></div>
</div>