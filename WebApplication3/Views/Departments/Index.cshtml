@model System.Collections.Generic.IEnumerable<WebApplication3.ViewModel.Department.DepartmentViewModel?>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-3"></div>
    <div class="col-6">
        <a asp-controller="Departments" asp-action="Create" class="btn btn-dark">Create</a>
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>Name</th>
                <th>Location</th>
                <th>Branch</th>
                <th>Parent Department</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td>@department.Name</td>
                    <td>@department.Location</td>
                    <td>@department.BranchName</td>
                    <td>@department.ParentDepartmentName</td>
                    <td>
                        <a asp-controller="Departments" asp-action="Edit" asp-route-departmentId="@department.Id">Edit</a> | 
                        <a asp-controller="Departments" asp-action="Details" asp-route-departmentId="@department.Id">Details</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-3"></div>
</div>